<!doctype html>
<html lang=fr>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

{% for article in articles  %}
{% if article.published %}

<article style="background-color: {{ article.color }}">
    <h1>{{ article.title }}</h1>
    <p>{{ article.description }}</p>
    <img src="{{ article.image }}" alt="des sales tronches">
    <p>{{ article.publishedDate|date ('d-m-y') }}</p>
</article>

{% endif %}
{% endfor %}
</body>
</html>